[Unit]
Description=uWSGI instance to serve investing-api
After=network.target

[Service]
User=ec2-user
Group=ec2-user
WorkingDirectory=/home/ec2-user/investing-signals-api
Environment="PATH=/home/ec2-user/investing-signals-api/env/bin"
ExecStart=/home/ec2-user/investing-signals-api/env/bin/uwsgi --ini investing.ini

[Install]
WantedBy=multi-user.target
